<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- General attributes -->
    <attr name="background" format="reference|color" />
    <attr name="textButton" format="reference|color" />
    <attr name="textRegular" format="reference|color" />
    <attr name="button" format="reference|color" />
    <attr name="spinner" format="reference|color" />

    <!-- FloatingActionButton custom attributes -->
    <declare-styleable name="FloatingActionButton">
        <attr name="fabLabelBackgroundColor" format="color" />
    </declare-styleable>

    <!-- MaterialSearchBar custom attributes -->
    <declare-styleable name="MaterialSearchBar">
        <attr name="mt_searchBarColor" format="color" />
        <attr name="mt_dividerColor" format="color" />
        <attr name="mt_navIconTint" format="color" />
        <attr name="mt_searchIconTint" format="color" />
        <attr name="mt_clearIconTint" format="color" />
        <attr name="mt_menuIconTint" format="color" />
        <attr name="mt_backIconTint" format="color" />
        <attr name="mt_textCursorTint" format="color" />
        <attr name="mt_textColor" format="color" />
        <attr name="mt_hintColor" format="color" />
        <attr name="mt_placeholderColor" format="color" />
        <attr name="mt_handlesTintEnabled" format="boolean" />
    </declare-styleable>

    <!-- Custom Button Attributes -->
    <declare-styleable name="CustomButton">
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>

    <!-- Toolbar Custom Attributes -->
    <declare-styleable name="CollapsingToolbar">
        <attr name="contentScrim" format="color|reference" />
        <attr name="scrimAnimationDuration" format="integer" />
        <attr name="scrimVisibleHeightTrigger" format="dimension" />
    </declare-styleable>
</resources>
