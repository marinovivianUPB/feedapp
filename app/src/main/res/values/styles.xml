<resources>

    <!-- Main application theme styles -->
    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <!-- TextSwitcher -->
    <style name="TextInDateSwitcher">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">10</item>
    </style>

    <!-- FAB -->
    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/colorSecondary300</item>
        <item name="fabLabelBackgroundColor">@color/fab_background</item>
    </style>

    <style name="ExtendedFab">
        <item name="android:backgroundTint">@color/colorSecondary300</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <!-- Alert Dialog -->
    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorSecondary500</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondary400</item>
        <item name="customBackground">@color/white</item>
        <item name="rippleColor">@color/delete_ripple</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="customBackground">@color/white</item>
        <item name="android:textColor">@color/colorSecondary400</item>
        <item name="rippleColor">@color/delete_ripple</item>
    </style>

    <style name="Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:singleLine">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Toolbar -->
    <style name="ToolbarTheme.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@null</item>
        <item name="customBackground">@null</item>
        <item name="android:colorControlNormal">@color/black</item>
        <item name="titleTextAppearance">@style/ToolbarTheme.Title</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorControlHighlight">@color/arrow_ripple</item>
    </style>

    <style name="CollapsingToolbar">
        <item name="android:fitsSystemWindows">true</item>
        <item name="contentScrim">@color/background</item>
        <item name="scrimAnimationDuration">300</item>
        <item name="scrimVisibleHeightTrigger">60dp</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="expandedTitleTextAppearance">@style/CollapsingToolbar.Title</item>
    </style>

    <style name="CollapsingToolbar.Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <!-- New Styles -->
    <style name="TextUsualBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardViewUsual" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="TextUsualBlackSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleBold">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextNotFound">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/errorColor</item>
        <item name="android:textStyle">italic</item>
    </style>

        <!-- MaterialButtonStyle definition -->
    <style name="MaterialButtonStyle">
        <item name="cornerRadius">4dp</item>
        <item name="android:backgroundTint">@color/colorAccent</item> <!-- Replace with your accent color -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <!-- Add other MaterialButton customizations as needed -->
    </style>

    <!-- TextUsual style definition -->
    <style name="TextUsual">
        <item name="android:textColor">@color/textColor</item> <!-- Replace with your desired color -->
        <item name="android:textSize">16sp</item> <!-- Replace with your desired text size -->
        <item name="android:fontFamily">sans-serif</item> <!-- Replace with a desired font if needed -->
        <!-- Add other text customizations as needed -->
    </style>

</resources>
